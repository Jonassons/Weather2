<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- TextView to display temperature -->
    <TextView
        android:id="@+id/temperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Temperature in Malmo: "
        android:textSize="18sp" />

    <!-- Button to check weather in Stockholm -->

    <!-- Fragment container -->

    <Button
        android:id="@+id/buttonStockholm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check weather in Stockholm" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/temperatureTextView"
        android:layout_marginTop="-314dp">


            <Button
                android:id="@+id/buttonCopenhagen"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Check weather in Copenhagen"
                android:layout_margin="50dp"
                />

            <Button
                android:id="@+id/buttonParis"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Check weather in Paris" />


        </FrameLayout>


</RelativeLayout>
